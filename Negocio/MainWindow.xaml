<Window x:Class="ICP.Negocio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ICP - Inicio de Sesión"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5">

    <!-- 1) Primero definimos los recursos -->
    <Window.Resources>
        <!-- Sombra sutil para el Border -->
        <DropShadowEffect x:Key="DropShadow"
                          Color="#000000"
                          BlurRadius="8"
                          ShadowDepth="2"
                          Opacity="0.2"/>
    </Window.Resources>

    <!-- 2) Después viene el contenido que hace StaticResource -->
    <Grid>
        <Border Width="400"
                Background="White"
                CornerRadius="8"
                Padding="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{StaticResource DropShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Título -->
                    <RowDefinition Height="30"/>
                    <!-- Espacio -->
                    <RowDefinition Height="Auto"/>
                    <!-- Campos -->
                    <RowDefinition Height="30"/>
                    <!-- Espacio -->
                    <RowDefinition Height="Auto"/>
                    <!-- Botón -->
                </Grid.RowDefinitions>

                <!-- 1) Título -->
                <TextBlock Grid.Row="0"
                           Text="Acceso Usuarios ICP"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="#333"
                           HorizontalAlignment="Center"/>

                <!-- 2) Cuadro de campos: 2 columnas, 2 filas -->
                <Grid Grid.Row="2"
                      Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Etiqueta "Nombre" -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Nombre:"
                               VerticalAlignment="Center"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="0,0,10,0"/>
                    <!-- TextBox Nombre -->
                    <TextBox Grid.Row="0" Grid.Column="1"
                             x:Name="txtCodigoCliente"
                             Height="30"
                             Padding="4"
                             FontSize="14"
                             BorderBrush="#CCC"
                             BorderThickness="1"
                             Background="#FAFAFA"
                             HorizontalAlignment="Stretch"/>

                    <!-- Separador horizontal -->
                    <Rectangle Grid.Row="1" Grid.ColumnSpan="2"
                               Height="1" Fill="#EEE"/>

                    <!-- Etiqueta "Contraseña" -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Contraseña:"
                               VerticalAlignment="Center"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="0,0,10,0"/>
                    <!-- PasswordBox Contraseña -->
                    <PasswordBox Grid.Row="2" Grid.Column="1"
                                 x:Name="txtContraseña"
                                 Height="30"
                                 Padding="4"
                                 FontSize="14"
                                 BorderBrush="#CCC"
                                 BorderThickness="1"
                                 Background="#FAFAFA"
                                 HorizontalAlignment="Stretch"/>
                </Grid>

                <!-- 3) Botón Intro -->
                <Button Grid.Row="4"
                        x:Name="btnIntro"
                        Content="Enviar"
                        Height="35"
                        Margin="0,20,0,0"
                        Background="#007ACC"
                        Foreground="White"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Stretch"
                        Click="BtnIntro_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
