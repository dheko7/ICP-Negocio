<Window x:Class="ICP.Negocio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ICP - Inicio de Sesión" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="20" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <TextBlock Text="Nombre" FontSize="14" FontWeight="Bold" Grid.Row="1" HorizontalAlignment="Center" Margin="0,20,0,5"/>
        <TextBox x:Name="txtCodigoCliente" Width="200" Grid.Row="2" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        <TextBlock Text="Contraseña" FontSize="14" FontWeight="Bold" Grid.Row="3" HorizontalAlignment="Center" Margin="0,0,0,5"/>
        <PasswordBox x:Name="txtContraseña" Width="200" Grid.Row="4" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        <Button x:Name="btnIntro" Content="Intro" Width="200" Background="Blue" Foreground="White" Grid.Row="5" HorizontalAlignment="Center" Click="BtnIntro_Click"/>
    </Grid>
    </Window>