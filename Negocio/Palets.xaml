<Window x:Class="ICP.Negocio.Palets"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ICP.Negocio"
        Title="Gestión de Palets" Height="450" Width="800">
    <Window.Resources>
        <local:PaletStatusConverter x:Key="PaletStatusConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Filtros -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <TextBlock Text="Filtro Albarán:" Margin="5" />
            <TextBox x:Name="txtFiltroAlbaran" Width="150" Margin="5" />
            <TextBlock Text="Filtro Referencia:" Margin="5" />
            <TextBox x:Name="txtFiltroReferencia" Width="150" Margin="5" />
            <Button x:Name="BtnFiltrar" Content="Filtrar" Click="BtnFiltrar_Click" Margin="5" />
            <Button x:Name="BtnLimpiarFiltro" Content="Limpiar Filtro" Click="BtnLimpiarFiltro_Click" Margin="5" />
        </StackPanel>

        <!-- Grid de Palets -->
        <DataGrid x:Name="PaletsGrid" Grid.Row="1" AutoGenerateColumns="False" Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Palet ID" Binding="{Binding PaletId}" />
                <DataGridTextColumn Header="Referencia" Binding="{Binding Referencia}" />
                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" />
                <DataGridTextColumn Header="Albarán" Binding="{Binding Albaran}" />
                <DataGridTextColumn Header="Ubicación" Binding="{Binding Ubicacion}" />
                <DataGridTextColumn Header="Estatus Palet" Binding="{Binding EstatusPalet, Converter={StaticResource PaletStatusConverter}}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Mover Palet -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5">
            <TextBlock Text="Nueva Ubicación:" Margin="5" />
            <ComboBox x:Name="cmbUbicaciones" Width="150" Margin="5" />
            <Button x:Name="BtnMover" Content="Mover Palet" Click="BtnMover_Click" Margin="5" />
            <Button x:Name="BtnVolver" Content="Volver" Click="BtnVolver_Click" Margin="5" />
        </StackPanel>
    </Grid>
</Window>