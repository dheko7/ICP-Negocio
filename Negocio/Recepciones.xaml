<Window x:Class="ICP.Negocio.Recepciones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Recepciones - ICP" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Fila 0: Albarán -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Número de Albarán:" FontWeight="Bold"/>
            <TextBox x:Name="txtAlbaran" Width="150" Margin="5,0,10,0" Text="ALB001"/>
            <Button x:Name="BtnCargar" Content="Cargar" Width="80" Margin="5,0,10,0" Click="BtnCargar_Click"/>
            <Button x:Name="BtnNuevaRecepcion" Content="Nueva Recepción" Width="120" Margin="5,0,0,0" Click="BtnNuevaRecepcion_Click"/>
        </StackPanel>

        <!-- Fila 1: Formulario para agregar línea -->
        <GroupBox Grid.Row="1" Header="Agregar Línea" Margin="0,0,0,10" Padding="5">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Referencia:"/>
                    <TextBox x:Name="txtReferencia" Width="150" Margin="5,0,10,0"/>
                    <Label Content="Cant. Buena:"/>
                    <TextBox x:Name="txtCantidadBuena" Width="80" Margin="5,0,10,0" Text="0"/>
                    <Label Content="Cant. Mala:"/>
                    <TextBox x:Name="txtCantidadMala" Width="80" Margin="5,0,10,0" Text="0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="N° Serie:"/>
                    <TextBox x:Name="txtNumeroSerie" Width="150" Margin="5,0,10,0"/>
                    <Label Content="Ubicación:"/>
                    <ComboBox x:Name="cmbUbicaciones" Width="150" Margin="5,0,10,0"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Fila 2: DataGrid para líneas de recepción -->
        <DataGrid x:Name="RecepcionesGrid" Grid.Row="2" AutoGenerateColumns="False" Margin="0,0,0,10" CanUserAddRows="False" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Albarán" Binding="{Binding Albaran}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Línea" Binding="{Binding Linea}" Width="50" IsReadOnly="True"/>
                <DataGridTextColumn Header="Referencia" Binding="{Binding Referencia}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Cant. Buena" Binding="{Binding CantidadBuena, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                <DataGridTextColumn Header="Cant. Mala" Binding="{Binding CantidadMala, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                <DataGridTextColumn Header="N° Serie" Binding="{Binding NumeroSerie}" Width="100"/>
                <DataGridTextColumn Header="Palet ID" Binding="{Binding PaletId}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Ubicación" Binding="{Binding Ubicacion}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Fila 3: Botones de acción -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnAgregar" Content="Agregar Línea" Width="120" Margin="5" Click="BtnAgregar_Click"/>
            <Button x:Name="BtnModificar" Content="Modificar Línea" Width="120" Margin="5" Click="BtnModificar_Click"/>
            <Button x:Name="BtnNuevaRef" Content="Referencia Desconocida" Width="150" Margin="5" Click="BtnNuevaRef_Click"/>
            <Button x:Name="BtnConfirmar" Content="Confirmar Recepción" Width="120" Margin="5" Click="BtnConfirmar_Click"/>
            <Button x:Name="BtnVolver" Content="Volver" Width="100" Margin="5" Click="BtnVolver_Click"/>
        </StackPanel>
    </Grid>
</Window>